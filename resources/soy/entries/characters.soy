      {/param}
    {/call}
    {call .sheet_value}
      {param label kind="html"}
        Medium<br />
        Load
      {/param}
      {param width: '100%' /}
      {param size: '9px' /}
      {param prefix: true /}
      {param center: true /}
      {param value kind="html"}
